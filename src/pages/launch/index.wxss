/* component/kaiping_component.wxss */
page{
  height:100%      
}
.kaiping_box {
    position: fixed;
    background-size: 100% 100%;
    height: 100%;
    width: 100%;
    background-image: url(https://gimg2.baidu.com/image_search/src=http%3A%2F%2Fb-ssl.duitang.com%2Fuploads%2Fitem%2F201808%2F05%2F20180805224929_gmbnu.jpg&refer=http%3A%2F%2Fb-ssl.duitang.com&app=2002&size=f9999,10000&q=a80&n=0&g=0n&fmt=jpeg?sec=1629979544&t=16ee2304e776627f53d95010f0e836de);
  }
  
  .kaiping_box image {
    width: 100%;
    height: 100%;
  }

  .kaiping-touxiang {
    position: absolute;
    top: 28%;
    left: 20%;
    width: 60%;
    height: 23%;
    display: flex;
  }
  .kaiping-touxiang image{
    width: 100%;
  }

  .kaiping-anniu {
    position: absolute;
    bottom: 22%;
    left: 36%;
    width: 100px;
    height: 100px;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 50px;
    background-color: #e94d4d;
  }
  .kaiping-anniu text{
    color: white;
    font-size: 20px;
  }
  
  .kaiping-header {
    position: absolute;
    top: 40rpx;
    left: 5px;
    width: 96%;
    display: flex;
  }
  .kaiping-second, .kaiping-btn {
    font-size: 12px;
    color: #e8b3b3;
    border: 1px solid #e8b3b3;
    padding: 1px 6px;
    border-radius: 10px;
  }
  